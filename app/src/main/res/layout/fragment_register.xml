                            android:layout_marginTop="8dp"
                            android:text="Первый класс"
                            android:textColor="@color/colorPrimary_text"
                            android:textSize="18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Spinner
                            android:id="@+id/register_spinner_classLearningOneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:spinnerMode="dialog"
                            app:layout_constraintEnd_toStartOf="@+id/register_spinner_classLearningOneChar"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/register_tv_classLearningOne"
                            app:layout_constraintTop_toTopOf="parent" />

