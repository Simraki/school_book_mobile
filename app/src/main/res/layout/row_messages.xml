<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowMessages_layout_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rowMessages_iv_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_smile"
            app:civ_border_color="@color/colorDivider"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rowMessages_iv_notification"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:src="@android:color/holo_red_dark"
            android:visibility="gone"
            app:civ_border_color="@color/colorDivider"
            app:civ_border_width="0.5dp"
            app:layout_constraintEnd_toEndOf="@id/rowMessages_iv_image"
            app:layout_constraintBottom_toBottomOf="@id/rowMessages_iv_image" />

        <TextView
            android:id="@+id/rowMessages_tv_name"
            style="@style/CommonText.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:text="Таисия Викторовна"
            app:layout_constraintBottom_toBottomOf="@id/rowMessages_iv_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rowMessages_iv_image"
            app:layout_constraintTop_toTopOf="@id/rowMessages_iv_image" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>